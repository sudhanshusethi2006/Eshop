
@{
    ViewBag.Title = "Home Page";
}



<div class="col-md-6">



    <div class="product-info">
        <img src="~/img/hp.jpg" />
        <h3>Hp Laptop</h3>
        <ul class="products-props">
            <li>Price: $999</li>
            <li>Model: Elite Book</li>
            <li>Processor: Intel 4 core I7</li>
            <li>Ram : 16 GB</li>
            <li>Storage: 512 GB SSD</li>
        </ul>
        <button id="buyButton" class="btn btn-success">Buy</button>
    </div>

    <br />
    <div id="theForm">
        <form>
            <label>your name: </label>
            <br />
            <input style="font-size: 18px; width: 205px" />
            <br />

            <label>email: </label>
            <br />
            <input type="email">
            <br />

            <label> Subject</label>
            <br />
            <input type="text" />

            <br />
            <label>Message :</label>
            <br />
            <textarea rows="4"></textarea>
            <br />

            <input type="submit" value="Send Message" />

        </form>
    </div>

    <div>
        <div id="loginToggle">Login</div>
        <form class="popup-form">
            <div>
                <label>Username</label>
                <input />
            </div>
            <div>
                <label>Password</label>
                <input type="password" />
            </div>
            <div>
                <input type="checkbox" />
                <label>Rememeber Me ?</label>
            </div>
            <div>
                <input type="submit" value="login" />
            </div>
        </form>
    </div>


</div>


